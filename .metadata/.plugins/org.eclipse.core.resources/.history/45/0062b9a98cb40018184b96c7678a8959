package com.example.demo.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.demo.gateway.RedisChannelOutboundGateway;
import com.example.demo.model.Post;
import com.example.demo.service.EnqueueService;

@Service
public class RedisEnqueueService implements EnqueueService {

	private RedisChannelOutboundGateway redisChannelOutboundGateway;

	@Autowired
	public RedisEnqueueService(RedisChannelOutboundGateway redisChannelOutboundGateway) {
		this.redisChannelOutboundGateway = redisChannelOutboundGateway;
	}

	@Override
	public void enqueue(PostPublishedEvent event) {
		redisChannelOutboundGateway.enqueue(event);
	}

	@Override
	public void enqueue(Post post) {
		redisChannelOutboundGateway.enqueue(event);
	}

}
